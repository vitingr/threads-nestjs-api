generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id   String  @id @default(auto()) @map("_id") @db.ObjectId
  name String?
}

model Comment {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  ownerId String?
  text    String?
}
